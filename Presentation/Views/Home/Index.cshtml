@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Gerenciamento de Alunos</title>
    <link rel="stylesheet" href="~/css/HomePage.css">
</head>
<body>
    <h1>Gerenciamento de Alunos</h1>

    <div id="menu">
        <ul>
            <li><a href="#buscar-aluno">Buscar Aluno</a></li>
            <li><a href="#buscar-todos">Buscar Todos</a></li>
            <li><a href="#cadastrar-aluno">Cadastrar Aluno</a></li>
            <li><a href="#deletar-aluno">Deletar Aluno</a></li>
        </ul>
    </div>

    <div id="buscar-aluno">
        <h2>Buscar Aluno por Nome</h2>
        <input type="text" id="nome-busca" placeholder="Digite o nome do aluno">
        <button onclick="buscarAlunoPorNome()">Buscar</button>

        <div id="resultado-busca"></div>
    </div>

    <div id="buscar-todos" style="display: none;">
        <h2>Lista de Alunos</h2>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Matrícula</th>
                    <th>Curso</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="lista-alunos"></tbody>
        </table>
    </div>

    <div id="cadastrar-aluno" style="display: none;">
        <h2>Cadastrar Aluno</h2>
        <form>
            <label for="nome-aluno">Nome:</label>
            <input type="text" id="nome-aluno" required>

            <label for="matricula-aluno">Matrícula:</label>
            <input type="number" id="matricula-aluno" required>

            <label for="curso-aluno">Curso:</label>
            <input type="text" id="curso-aluno" required>

            <label for="turma-aluno">Turma:</label>
            <input type="text" id="turma-aluno">

            <label for="email-aluno">Email:</label>
            <input type="email" id="email-aluno">

            <label for="endereco-aluno">Endereço:</label>
            <input type="text" id="endereco-aluno">

            <label for="telefone-aluno">Telefone:</label>
            <input type="number" id="telefone-aluno">

            <label for="cpf-aluno">CPF/CNPJ:</label>
            <input type="text" id="cpf-aluno">

            <label for="data-nascimento-aluno">Data de Nascimento:</label>
            <input type="date" id="data-nascimento-aluno">

            <button type="submit" onclick="cadastrarAluno()">Cadastrar</button>
        </form>
    </div>

    <div id="deletar-aluno" style="display: none;">
        <h2>Deletar Aluno</h2>
        <input type="text" id="matricula-deletar" placeholder="Digite a matrícula do aluno">
        <button onclick="deletarAluno()">Deletar</button>

        <div id="mensagem-deletar"></div>
    </div>

    <script src="~/js/crudaluno.js"></script>
</body>
</html>

